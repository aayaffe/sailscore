<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avimarineinnovations.sailscore">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SailscoreTheme" >
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.SailScoreMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.SeriesListActivity"
            android:label="@string/series_list_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.SeriesEditActivity"
            android:label="@string/series_edit_title"
            android:parentActivityName="com.avimarineinnovations.sailscore.Activities.SeriesTabActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.avimarineinnovations.sailscore.Activities.SeriesTabActivity" />
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.EntriesListActivity"
            android:label="@string/competitor_list_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.EntryEditActivity"
            android:label="@string/competitor_edit_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.EntriesSelectListActivity"
            android:label="@string/competitor_select_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.ResultsEntryListActivity"
            android:label="@string/results_list_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.TimesEntryListActivity"
            android:label="@string/times_list_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.RaceResultsEntryListActivity"
            android:label="@string/race_results_list_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.RaceTimesEntryListActivity"
            android:label="@string/race_times_list_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.SeriesScoreListActivity"
            android:label="@string/scores_list_title" >
        </activity>
        <!--<activity-->
            <!--android:name="com.avimarineinnovations.sailscore.ResultsExportActivity"-->
            <!--android:label="@string/export_title" >-->
        <!--</activity>-->
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.SeriesTabActivity"
            android:label="@string/series_tab_title" >
        </activity>
        <activity
            android:name="com.avimarineinnovations.sailscore.Activities.InstructionsActivity"
            android:label="@string/instructions_title" >
        </activity>
    </application>

</manifest>